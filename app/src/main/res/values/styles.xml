<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/</item>
    </style>

    <style name="TitlesTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SubtitlesTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SongTitleTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_book</item>
    </style>

    <style name="SongArtistTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_narrow_thin</item>
    </style>

    <style name="settings_title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_book</item>
    </style>

    <style name="genre_item_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MenuOptionsTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/gotham_narrow_thin</item>
    </style>

    <style name="RandomButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="FollowButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
